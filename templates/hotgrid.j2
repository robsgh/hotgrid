{% extends "base.j2" %}

{% block content %}
    <section class="section">
        <div class="container">
            <div class="columns is-centered is-multiline is-mobile">
                {% for t in tiles %}
                    <div class="column">
                        <div class="box is-light" onclick="$.post('/activate/' + {{ loop.index - 1 }})">
                            <figure class="image is-square">
                                <img src="/static/{{ t.icon_image }}" /> 
                            </figure>
                            <p class="subtitle">{{ t.name }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}